{
  "name": "poc-safe-on-fil",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "calibration:deploy": "forge create --rpc-url https://api.calibration.node.glif.io/rpc/v1 --private-key $PRIVATE_KEY --broadcast src/safe-controller/SafeController.sol:SafeController",
    "calibration:set-controller": "forge script script/SetController.sol:SetController --rpc-url https://api.calibration.node.glif.io/rpc/v1 --broadcast -g 100000",
    "calibration:tick": "forge script script/Tick.sol:Tick --rpc-url https://api.calibration.node.glif.io/rpc/v1 --broadcast -g 100000",
    "calibration:tick-via-safe": "node --experimental-transform-types script/tick-via-safe.ts",
    "calibration:verify": "filfox-verifier forge $DEPLOYED_CONTRACT_ADDRESS src/safe-controller/SafeController.sol:SafeController --chain 314159",
    "lint": "npm run prettier && npm run solhint",
    "lint:check": "npm run prettier:check && npm run solhint:check",
    "prettier": "prettier --write 'src/**/*.sol'",
    "prettier:check": "prettier --check 'src/**/*.sol'",
    "solhint": "solhint --config ./.solhint.json 'src/**/*.sol' --fix",
    "solhint:check": "solhint --config ./.solhint.json 'src/**/*.sol'"
  },
  "devDependencies": {
    "@checkernetwork/prettier-config": "^1.0.1",
    "@ethersproject/abi": "^5.8.0",
    "@fil-b/filfox-verifier": "^1.0.3",
    "@safe-global/api-kit": "^4.0.0",
    "@safe-global/protocol-kit": "^6.1.1",
    "@safe-global/types-kit": "^3.0.0",
    "@types/node": "^24.3.0",
    "eslint": "^9.34.0",
    "neostandard": "^0.12.2",
    "prettier": "^3.5.3",
    "prettier-plugin-solidity": "^1.4.3",
    "solc": "^0.8.30",
    "solhint": "^6.0.1"
  }
}
