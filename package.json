{
  "name": "poc-safe-on-fil",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "calibration:deploy": "forge create --rpc-url https://api.calibration.node.glif.io/rpc/v1 --private-key $PRIVATE_KEY --broadcast src/safe-controller/SafeController.sol:SafeController",
    "calibration:tick": "forge script script/Tick.sol:Tick --rpc-url https://api.calibration.node.glif.io/rpc/v1 --broadcast -g 200",
    "calibration:verify": "filfox-verifier forge $SAFE_CONTROLLER_ADDRESS src/safe-controller/SafeController.sol:SafeController --chain 314159",
    "lint": "npm run prettier && npm run solhint",
    "lint:check": "npm run prettier:check && npm run solhint:check",
    "prettier": "prettier --write 'src/**/*.sol'",
    "prettier:check": "prettier --check 'src/**/*.sol'",
    "solhint": "solhint --config ./.solhint.json 'src/**/*.sol' --fix",
    "solhint:check": "solhint --config ./.solhint.json 'src/**/*.sol'"
  },
  "devDependencies": {
    "@checkernetwork/prettier-config": "^1.0.1",
    "@fil-b/filfox-verifier": "^1.0.3",
    "eslint": "^9.34.0",
    "neostandard": "^0.12.2",
    "prettier": "^3.5.3",
    "prettier-plugin-solidity": "^1.4.3",
    "solc": "^0.8.30",
    "solhint": "^6.0.1"
  }
}
